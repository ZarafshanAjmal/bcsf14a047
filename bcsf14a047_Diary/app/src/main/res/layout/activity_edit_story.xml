<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_story"
            android:text="Edit Story"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="24dp"/>

        <EditText
            android:id="@+id/et_edit_story"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_edit_story"
            android:layout_marginTop="17dp"
            android:inputType="textMultiLine" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_edit_story"
            android:text="Update"
            android:layout_alignParentRight="true"
            android:layout_below="@id/et_edit_story"/>

        <Button
            android:id="@+id/btn_delete_edit_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_save_edit_story"
            android:text="Delete"
            android:layout_below="@id/et_edit_story"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>