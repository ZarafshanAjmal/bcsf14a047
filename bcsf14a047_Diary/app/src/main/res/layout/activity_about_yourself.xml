<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleTodayStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About YourSelf"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="24dp"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/CardViewWriteStory"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/titleTodayStory">


        <EditText
            android:id="@+id/writeStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write something about yourself"
            android:inputType="textMultiLine"
            />
    </android.support.v7.widget.CardView>




    <Button
        android:id="@+id/Save_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/CardViewWriteStory"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/standard_button"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"/>


</RelativeLayout>